        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">
        {{ form_label(form.credencialFile) }}
        {{ form_widget(form.credencialFile) }}
        {{ form_errors(form.credencialFile) }}
    </div>
    <div class="form-group col-md-6 col-sm-12">
        {{ form_label(form.historialFile) }}
        {{ form_widget(form.historialFile) }}
        {{ form_errors(form.historialFile) }}
    </div>





</div>


