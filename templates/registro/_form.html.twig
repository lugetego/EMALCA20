        {{ form_widget(form.porcentaje, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.porcentaje) }}
    </div>
    <div class="form-group col-md-8 col-sm-12">
        <label for="inputProfesorInst">Profesor que lo recomienda</label>
        {{ form_widget(form.profesorInst, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.profesorInst) }}
    </div>
    <div class="form-group col-md-4 col-sm-12">
        <label for="inputProfesorCorreo">Correo del profesor que lo recomienda</label>
        {{ form_widget(form.profesorCorreo, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.profesorCorreo) }}
    </div>
    <div class="col-md-12" >
        <div class="alert alert-dismissable alert-warning">
            <span class="glyphicon glyphicon-exclamation-sign"></span>
