        <label for="inputNombres">Nombre(s)</label>
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nombre) }}
    </div>
    <div class="form-group col-md-4 col-sm-12">
        <label for="inputPaterno">Apellido(s)</label>
        {{ form_widget(form.apaterno, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.apaterno) }}
    </div>
    <div class="form-group col-md-4 col-sm-12">
        {{ form_label(form.correo) }}
        {{ form_widget(form.correo, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.correo) }}
    </div>

    <div class="form-group col-md-2 col-sm-12">
        {{ form_label(form.genero) }}
        {{ form_widget(form.genero, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.genero) }}
    </div>

</div>

<h4 class="text-secondary border-bottom my-4 pb-2">Información académica</h4>
